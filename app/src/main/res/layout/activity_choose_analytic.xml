<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".ChooseAnalyticActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FEE8D4"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/todayCardView"
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF"
        app:cardBackgroundColor="#F6E6FA"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/todayBtnImageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/daily_analytic_icon" />

            <TextView
                android:id="@+id/todayBtnTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/reemkufi"
                android:text="Daily Analytics"
                android:textAlignment="center"
                android:textColor="#000"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/weekCardView"
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        android:background="#fff"
        app:cardBackgroundColor="#F6E6FA"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/weekBtnImageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/weekly_analytic_icon" />

            <TextView
                android:id="@+id/weekBtnTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/reemkufi"
                android:text="Weekly Analytics"
                android:textAlignment="center"
                android:textColor="#000"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/monthCardView"
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="#fff"
        app:cardBackgroundColor="#F6E6FA"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/monthBtnImageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/monthly_analytic_icon" />

            <TextView
                android:id="@+id/monthBtnTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/reemkufi"
                android:text="Monthly Analytics"
                android:textAlignment="center"
                android:textColor="#000"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/savingsGoalCardView"
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        android:background="#fff"
        app:cardBackgroundColor="#F6E6FA"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/savingsGoalBtnImageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/week" />

            <TextView
                android:id="@+id/savingsGoalBtnTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/reemkufi"
                android:text="Set Monthly \nSavings Goal"
                android:textAlignment="center"
                android:textColor="#000"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>