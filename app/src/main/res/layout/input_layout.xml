<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="10dp"
    app:cardElevation="10dp"
    android:layout_margin="20dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="match_parent"
        android:background="@drawable/addspendingframe"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/item"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:fontFamily="@font/reemkufi"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="Add spending"
            android:textColor="#000"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/itemsspinner"
                android:layout_width="315dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="20dp"
                android:background="#E0C2F2"
                android:entries="@array/items"
                android:gravity="center"
                android:text="Category"
                android:theme="@style/SpinnerTheme"/>

            <EditText
                android:id="@+id/amount"
                android:layout_width="50mm"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/comfortaa"
                android:hint="Enter Amount..."
                android:inputType="number"
                android:paddingLeft="12dp"
                android:textColor="#000"
                android:textColorHint="#000" />

            <EditText
                android:id="@+id/note"
                android:layout_width="50mm"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/comfortaa"
                android:hint="Enter Note..."
                android:inputType="text"
                android:paddingLeft="12dp"
                android:textColor="#000"
                android:textColorHint="#000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/save"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="1mm"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/chgpwyes"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_toRightOf="@id/save"
                    android:background="@drawable/chgpwno"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>