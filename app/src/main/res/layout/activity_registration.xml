<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".RegistrationActivity">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="155dp"
        android:src="@drawable/registration_img" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:fontFamily="@font/reemkufi"
        android:gravity="center"
        android:text="Welcome to Pine!"
        android:textSize="25.89dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_margin="8dp"
        android:paddingLeft="25dp"
        android:background="@drawable/purple_rec"
        android:hint="Email"
        android:fontFamily="@font/comfortaa"
        android:inputType="textEmailAddress"
        android:textColor="#000"
        android:textColorHint="#948B97"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_margin="8dp"
        android:paddingLeft="25dp"
        android:background="@drawable/purple_rec"
        android:fontFamily="@font/comfortaa"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#000"
        android:textColorHint="#948B97"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_margin="8dp"
        android:paddingLeft="25dp"
        android:background="@drawable/purple_rec"
        android:fontFamily="@font/comfortaa"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColor="#000"
        android:textColorHint="#948B97"
        android:textSize="20sp" />

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/loginbtn"
        android:fontFamily="@font/reemkufi"
        android:text="Register"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAllCaps="false" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/registertxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa"
            android:text="Already have an account? Login"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/registerQn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/comfortaa"
            android:text="HERE"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="#DC7869"/>

    </LinearLayout>
</LinearLayout>