<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="20dp"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="310dp"
        android:layout_height="252dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/login_img" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/reemkufi"
        android:text="Welcome to Pine!"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="25.89dp"
        android:layout_margin="10dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_margin="8dp"
        android:paddingLeft="25dp"
        android:background="@drawable/purple_rec"
        android:fontFamily="@font/comfortaa"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#000"
        android:textColorHint="#948B97"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:paddingLeft="25dp"
        android:background="@drawable/purple_rec"
        android:fontFamily="@font/comfortaa"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#000"
        android:textColorHint="#948B97"
        android:textSize="20sp" />


    <Button
        android:id="@+id/loginBtn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/loginbtn"
        android:fontFamily="@font/reemkufi"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Login"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/forgotPasswordQn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa"
        android:gravity="center"
        android:text="Forgot Password?"
        android:textStyle="bold"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/logintxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/comfortaa"
            android:text="Do not have an account? Register"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/loginQn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/comfortaa"
            android:textStyle="bold"
            android:text="HERE"
            android:textColor="#DC7869"
            android:textSize="12dp"/>

    </LinearLayout>

</LinearLayout>