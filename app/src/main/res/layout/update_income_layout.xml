<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:orientation="vertical"
    android:elevation="10dp"
    app:cardElevation="10dp"
    android:layout_margin="20dp"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/orangewindow"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/comfortaa"
            android:gravity="center_vertical"
            android:text="Update this income item?"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/amount"
            android:layout_width="325dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:fontFamily="@font/comfortaa"
            android:hint="@string/enterAmount"
            android:inputType="number"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/note"
            android:layout_width="325dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:fontFamily="@font/comfortaa"
            android:hint="@string/noteInput"
            android:inputType="text"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textSize="20dp"  />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="150dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/chgpasswordyes"
                    android:fontFamily="@font/reemkufi"
                    android:hint="Submit"
                    android:textColorHint="#fff"
                    android:textSize="16dp"  />

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="150dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/btnUpdate"
                    android:background="@drawable/chgpasswordno"
                    android:fontFamily="@font/reemkufi"
                    android:hint="Delete"
                    android:textColorHint="#fff"
                    android:textSize="16dp"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>