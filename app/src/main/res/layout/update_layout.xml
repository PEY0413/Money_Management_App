<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="10dp"
    app:cardElevation="10dp"
    android:layout_margin="20dp"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="396dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/purplewindow"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/comfortaa"
            android:gravity="center_vertical"
            android:text="Update this item?"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/comfortaa"
            android:gravity="center_vertical"
            android:text="Item Name"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/amount"
            android:layout_width="50mm"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/comfortaa"
            android:hint="Enter Amount..."
            android:inputType="number"
            android:paddingLeft="12dp"
            android:textColor="#000"
            android:textColorHint="#000" />

        <EditText
            android:id="@+id/note"
            android:layout_width="50mm"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/comfortaa"
            android:hint="Enter Remarks..."
            android:inputType="text"
            android:paddingLeft="12dp"
            android:textColor="#000"
            android:textColorHint="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="150dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="0dp"
                    android:background="@drawable/chgpasswordyes"
                    android:fontFamily="@font/reemkufi"
                    android:hint="Submit"
                    android:textColorHint="#fff"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="150dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/btnUpdate"
                    android:background="@drawable/chgpasswordno"
                    android:fontFamily="@font/reemkufi"
                    android:hint="Delete"
                    android:textColorHint="#fff"
                    android:textSize="16dp" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>