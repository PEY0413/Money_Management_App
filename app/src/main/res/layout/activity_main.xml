<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:scrollbars="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6E6FA"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:layout_below="@+id/toolbar"
        android:background="#fff">

        <TableRow>

            <TextView
                android:id="@+id/remainingBudgetTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/borders"
                android:gravity="center"
                android:padding="5dp"
                android:fontFamily="@font/comfortaa"
                android:text="Savings"
                android:textColor="#DB7869"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/comfortaa"
                android:text="Budget"
                android:textColor="#370C42"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/borders"
                android:padding="5dp"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/comfortaa"
                android:text="Today"
                android:textColor="#A478B8"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/borders"
                android:padding="5dp"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/comfortaa"
                android:text="Week"
                android:textColor="#DBB8F0"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/borders"
                android:padding="5dp"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/comfortaa"
                android:text="Month"
                android:textColor="#F5AE51"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/borders"
                android:padding="5dp"
                android:textSize="12sp"/>

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/borders"
                android:gravity="center"
                android:padding="5dp"
                android:fontFamily="@font/comfortaa"
                android:text="$0"
                android:textColor="#DB7869"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/budgetTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/comfortaa"
                android:text="$0"
                android:textColor="#370C42"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/borders"
                android:padding="5dp"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/todaySpendingTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/comfortaa"
                android:text="$0"
                android:textColor="#A478B8"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/borders"
                android:padding="5dp"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/weekSpendingTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/comfortaa"
                android:text="$0"
                android:textColor="#DBB8F0"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/borders"
                android:padding="5dp"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/monthSpendingTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa"
                android:layout_weight="1"
                android:text="$0"
                android:textColor="#F5AE51"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/borders"
                android:padding="5dp"
                android:textSize="12sp"/>

        </TableRow>

    </TableLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/table">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/incomeCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:backgroundTint="#F6E6FA">

                    <LinearLayout
                        android:layout_width="355dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/mainbackground"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/incomeBtnImageView"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/ic_history" />

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/reemkufi"
                                android:text="@string/Income"
                                android:textColor="#000"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/comfortaa"
                                android:text="@string/IncomeCVDes"
                                android:textColor="#000"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/budgetCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:backgroundTint="#F6E6FA">

                    <LinearLayout
                        android:layout_width="355dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:background="@drawable/mainbackground"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/budgetBtnImageView"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/budget" />

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="18dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/reemkufi"
                                android:text="@string/Budget"
                                android:textColor="#000"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/comfortaa"
                                android:text="@string/BudgetCVDes"
                                android:textColor="#000"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/todayCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:backgroundTint="#F6E6FA">

                    <LinearLayout
                        android:layout_width="355dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:background="@drawable/mainbackground"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/todayBtnImageView"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/today" />

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="18dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/reemkufi"
                                android:text="@string/dailyExpense"
                                android:textColor="#000"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/comfortaa"
                                android:text="@string/dailyExpenseCVDes"
                                android:textColor="#000"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/weekCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:backgroundTint="#F6E6FA">

                    <LinearLayout
                        android:layout_width="355dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:background="@drawable/mainbackground"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/weekBtnImageView"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="25dp"
                            android:src="@drawable/week" />

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="18dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/reemkufi"
                                android:text="@string/weeklyExpense"
                                android:textColor="#000"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/comfortaa"
                                android:text="@string/weeklyExpenseCVDes"
                                android:textColor="#000"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/monthCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:backgroundTint="#F6E6FA">

                    <LinearLayout
                        android:layout_width="355dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:background="@drawable/mainbackground"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/monthBtnImageView"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/month" />

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/reemkufi"
                                android:text="@string/monthlyExpense"
                                android:textColor="#000"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/comfortaa"
                                android:text="@string/monthlyExpenseCVDes"
                                android:textColor="#000"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/analyticsCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:backgroundTint="#F6E6FA">

                    <LinearLayout
                        android:layout_width="355dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:background="@drawable/mainbackground"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/analyticsImageView"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/ic_analytics" />

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="18dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/reemkufi"
                                android:text="@string/Analysis"
                                android:textColor="#000"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/comfortaa"
                                android:text="@string/AnalysisCVDes"
                                android:textColor="#000"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/historyCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:backgroundTint="#F6E6FA">

                    <LinearLayout
                        android:layout_width="355dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/mainbackground"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/historyBtnImageView"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/ic_history" />

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/reemkufi"
                                android:text="@string/History"
                                android:textColor="#000"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/comfortaa"
                                android:text="@string/HistoryCVDes"
                                android:textColor="#000"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>



</RelativeLayout>